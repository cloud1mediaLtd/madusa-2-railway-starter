# Next.js Storefront Environment Variables
# Copy this file to .env.local and update the values

# Port (Next.js will use this port)
PORT=8000

# Your Medusa backend URL
# Local: http://localhost:9000
# Production: Update to your backend domain
MEDUSA_BACKEND_URL=http://localhost:9000

# Your publishable API key from Medusa
# Get this from your Medusa admin dashboard
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_your_publishable_key_here

# Your storefront URL
NEXT_PUBLIC_BASE_URL=http://localhost:8000

# Default region (ISO-2 lowercase format: gb, us, dk, etc.)
NEXT_PUBLIC_DEFAULT_REGION=gb

# Stripe Public Key (Optional)
# NEXT_PUBLIC_STRIPE_KEY=pk_test_your_stripe_public_key

# Medusa Payments (Optional)
# NEXT_PUBLIC_MEDUSA_PAYMENTS_PUBLISHABLE_KEY=
# NEXT_PUBLIC_MEDUSA_PAYMENTS_ACCOUNT_ID=

# Next.js Revalidation Secret
REVALIDATE_SECRET=supersecret

# Meilisearch Configuration (Optional)
# Only needed if you want search functionality
# NEXT_PUBLIC_SEARCH_ENDPOINT=http://localhost:7700
# NEXT_PUBLIC_INDEX_NAME=products
# NEXT_PUBLIC_MEILISEARCH_API_KEY=masterKey

# Medusa Cloud S3 (Optional - for image optimization)
# MEDUSA_CLOUD_S3_HOSTNAME=
# MEDUSA_CLOUD_S3_PATHNAME=
